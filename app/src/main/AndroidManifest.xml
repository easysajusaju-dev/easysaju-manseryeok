<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.manseryeok">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.location.network"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />

    <application
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Manseryeok"
        android:usesCleartextTraffic="true"
        tools:replace="allowBackup"
        tools:targetApi="31">
        <activity
            android:name=".BaseActivity"
            android:exported="false" />
        <activity
            android:name=".page.DBActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".page.InquiryActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".page.CompassActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".page.CalendarActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".page.CalendarInputActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.adevinta.leku.LocationPickerActivity"
            android:exported="false"
            android:label="@string/leku_title_activity_location_picker"
            android:parentActivityName=".page.CalendarInputActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/leku_searchable" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".page.CalendarInputActivity" />
        </activity>
        <activity
            android:name=".page.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCBMxOrA67nzoiH0_jrhf9rqMyvaSkmFgo" />
        <meta-data
            android:name="com.naver.maps.map.CLIENT_ID"
            android:value="1usbnlh4m0" />
    </application>

</manifest>