<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Manseryeok.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/box_navy"
    android:id="@+id/widget_calendar_container"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@style/Theme.Manseryeok.AppWidgetContainer">

    <TextView
        android:id="@+id/tv_widget_calendar_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:text="2023년 1월 1일"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_widget_calendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="丁戊己庚\n辰巳午未"
        android:textColor="@color/white" />
</LinearLayout>